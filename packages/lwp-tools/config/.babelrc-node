{
    "presets": [
        [
            "@babel/env", {
                "targets": {
                    "node": "8.0"
                },
                "loose": true,
                "exclude": [
                    "transform-regenerator"
                ]
            }
        ],
        "@babel/react",
        "@babel/flow"
    ],

    "plugins": [
        [ "@babel/plugin-syntax-dynamic-import", { "loose": true } ],
        [ "@babel/plugin-proposal-decorators", { "loose": true, "legacy": true } ],
        [ "@babel/plugin-proposal-class-properties", { "loose": true } ]
    ],

    "env": {
        "test": {
            "plugins": [
                [ "istanbul", { "only": "./src" } ]
            ]
        }
    }
}
